{
  "name": "open-karaoke-studio",
  "private": true,
  "version": "1.0.0",
  "description": "Open Karaoke Studio - vocal separation for karaoke creation",
  "scripts": {
    "dev": "./scripts/dev.sh",
    "dev:frontend": "cd frontend && pnpm dev",
    "dev:backend": "cd backend && ./run_api.sh",
    "setup": "./scripts/setup.sh",
    "build": "cd frontend && pnpm build",
    "test": "./scripts/test.sh",
    "lint:frontend": "cd frontend && pnpm lint:check",
    "format:backend": "cd backend && isort . && black .",
    "lint:backend": "cd backend && flake8 .",
    "check:backend": "cd backend && isort . && black . && flake8 ."
  },
  "packageManager": "pnpm@10.9.0"
}